@model List<Tarefa>

<h1>Lista de Tarefas</h1>

<table class="table">
    <thead>
        <tr>
            <th>Tarefa</th>
            <th>Concluída</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Descricao</td>
                <td>@(tarefa.Concluida ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Editar" class="btn btn-info" asp-route-id="@tarefa.Id">Editar</a> |
                    <a asp-action="Deletar" class="btn btn-info" asp-route-id="@tarefa.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Adicionar" class="btn btn-info">Adicionar Nova Tarefa</a>